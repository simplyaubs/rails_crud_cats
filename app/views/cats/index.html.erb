<%= form_for @cat do |f| %>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.submit 'Add cat' %>
  </p>
<% end %>

<% @cats.each do |cat| %>
<ul>
<li>
  <%= cat.name %>, <%= cat.color %>
</li>
</ul>
<% end %>